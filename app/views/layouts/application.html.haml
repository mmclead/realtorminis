<!DOCTYPE html>
%head
  %meta(charset="utf-8")
  %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
  %meta(name="viewport" content="width=device-width, initial-scale=1.0")
  = csrf_meta_tags 
  = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
  = javascript_include_tag 'http://code.jquery.com/jquery-1.11.2.min.js'
  = stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css", "data-turbolinks-track" => true 
  = javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js", "data-turbolinks-track" => true
  = javascript_include_tag 'application', "data-turbolinks-track" => true 
  
  %title= yield :title
%body
  #page_container

    %header#header
      = render user_signed_in? ? 'layouts/user/header' : 'layouts/header'

    %section#page
      .container-fluid
        =render 'layouts/notices'
        = yield

    %footer
      = render user_signed_in? ? 'layouts/user/footer' : 'layouts/footer'

  
