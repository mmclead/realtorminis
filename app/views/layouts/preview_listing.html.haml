<!DOCTYPE html>
%head
  %meta(charset="utf-8")
  %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
  %meta(name="viewport" content="width=device-width, initial-scale=1.0")
  = javascript_include_tag '//code.jquery.com/jquery-1.11.2.min.js'
  = stylesheet_link_tag "//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css"
  = javascript_include_tag "//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"
  - if @creating_remote_site
    = stylesheet_link_tag '//s3.amazonaws.com/media.realtorminis.com/assets/preview.css'
    = javascript_include_tag '//s3.amazonaws.com/media.realtorminis.com/assets/preview.js'
  - else
    = stylesheet_link_tag 'preview.css'
    = javascript_include_tag 'preview.js'


  %title= yield :title
  
%body
  #page_container
  - unless @creating_remote_site
    %header#header
      = render partial: 'shared/header/user/preview_header'

  %section#page
    .container-fluid
      = yield





