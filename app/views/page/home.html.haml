.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"} Realtor Minis
    .collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li
          %a{:href => "#home"} Home
        %li
          %a{:href => "#about"} About
        %li
          %a{:href => "#contact"} Contact
        %li
          %button.btn.btn-conf.btn-green.navbar-btn{type: "button", data: {toggle: "modal", target: "#user_signup_form"}}
            Sign up
        %li
          = link_to('Login', new_user_session_path)

/ ********** HEADER **********
%section#home
#h
  .container
    .row
      .col-md-6
        %h2= cms_snippet_content("home-hero").html_safe 

        %button.btn.btn-conf.btn-green{type: "button", data: {toggle: "modal", target: "#user_signup_form"}}
          Sign up
        = link_to('Login', new_user_session_path, class: "btn btn-conf btn-clear")

#g
  .container
    .row
      = cms_snippet_content("home-key-features").html_safe

/ ********** SIDE IMAGE - SECTION **********
%section#about
%section.side-image.text-heavy.clearfix
  .image-container.col-md-5.col-sm-3.pull-left
    .background-image-holder
      /%img.background-image{:alt => "Background Image", :src => "assets/img/side.jpg"}

  .container
    .row
      .col-md-6.col-md-offset-6.col-sm-8.col-sm-offset-4.content.clearfix
        %h1 Create Beatiful Single Page Listing Sites
        %h2= "For only $#{(ENV['BASIC_LISTING_PRICE'].to_i/100)} (forever)"
        %p.lead
          Your clients love getting special treatment.  We can help you give it to them.

        %button.btn.btn-conf.btn-green{type: "button", data: {toggle: "modal", target: "#user_signup_form"}}
          Sign up
        %br
        = cms_snippet_content('home-services-details').html_safe

/ ********** WHITE SECTION - IMAGE PHONE **********
.container
  .row.mtb
    .col-md-5
      %h1
        Creating your site is easy.
      %h3.mb
