%head
  %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0"}
  =content_for :title, @listing.title

=render 'listings/show/footer'

.jumbotron.textured-backgound
  .text-center.img-center
    %h2= @listing.title
      
    =render 'listings/show/details_banner'
    =render 'listings/show/video'
    
    %h3= @listing.address
    
.dark-textured-background
  =render 'listings/show/navigation'
  .container
    .row
      .col-md-10
        =render 'listings/show/mobile_contact'
        =render 'listings/show/photos'
        =render 'listings/show/info'
        =render 'listings/show/contact_footer'
      .col-md-2
        =render 'listings/show/contact'
    