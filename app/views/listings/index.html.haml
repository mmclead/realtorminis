%h1 
  Current Listings
  = link_to 'New Listing', new_user_listing_path(@user), class: "btn btn-primary"


%table.table.table-striped
  %thead
    %tr
      %th Address
      %th Price
      %th Bedrooms
      %th Bathrooms
      %th Square feet
      %th Web Address
      %th Active
      %th Actions
  %tbody
    - @listings.each do |listing|
      %tr
        %td= listing.address
        %td= listing.price
        %td= listing.bedrooms
        %td= listing.bathrooms
        %td= listing.sq_ft
        %td= listing.web_address
        %td= active_status(listing)
        %td 
          .btn-group
            =link_to 'See Listing', [@user,listing], {class: 'btn btn-default'}              
            %button{type: 'button', class: "btn btn-default dropdown-toggle", data: {toggle: 'dropdown'}}
              %span.caret
              %span.sr-only Toggle Dropdown
            %ul.dropdown-menu{role: 'menu'}
              %li= link_to 'Edit Info', edit_user_listing_path(@user, listing)
              %li= link_to 'Add Photos', listing_photos_path(listing)
              %li= link_to 'Remove', [@user,listing], :method => :delete, :data => { :confirm => 'Are you sure?' }

