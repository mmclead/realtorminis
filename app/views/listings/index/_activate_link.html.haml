- if listing.is_paid_for?
  = link_to 'Make Listing Live', publish_listing_path(listing), remote: true, method: :patch, class: 'publish_button btn btn-primary btn-lg'
- else
  %button.btn.btn-primary.btn-lg.enable_listing_button{type: "button", data: {toggle: "modal", target: "#activate_listing_modal", listing_id: "#{listing.id}", user_id: "#{@user.id}"}}
    Make Listing Live