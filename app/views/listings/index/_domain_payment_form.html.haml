#add_new_custom_domain_modal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{ type:"button", aria: {label:"Close"}, data: {dismiss:"modal"}}
          %span{aria:{hidden:"true"}} &times;
        %h4.modal-title= cms_snippet_content("purchase-custom-domain-title").html_safe 

      .modal-body
        = form_tag user_domain_names_path(@user.id), method: :post, id: 'domain_name_purchase_form', class: 'form-inline' do
          = hidden_field_tag 'domain_name[listing_id]'
          = hidden_field_tag 'domain_name[name]'
          .form-group
            .input-group
              .input-group-addon www.
              = text_field_tag 'domain', '', id: "domain_name_domain", class: 'form-control'
              .input-group-addon 
                = select_tag 'tld', options_for_select(@supported_tlds), id: "domain_name_tld", class: 'form-control'
          = link_to "Check Availability", check_availability_domain_names_path(name: ""), remote: true, format: :json, class: "btn btn-primary", id: 'domain_name_checker'
          


          %article#payment_form.hidden
            .text-center
              %label.amount.lead
                %span
                  = "Yours forever for only $#{(Rails.configuration.prices[:basic_listing].to_i/100)}"
              %br    
              %script{src: "https://checkout.stripe.com/checkout.js", class: "stripe-button", data: {key: "#{Rails.configuration.stripe[:publishable_key]}", email: "#{current_user.email}", name: "#{cms_snippet_content("store-name").html_safe }", panel: {label: "#{cms_snippet_content("basic-listing-purchase-form-cta").html_safe }"}, label: "#{cms_snippet_content("basic-listing-purchase-cta").html_safe }", description: "Single Listing Site", amount: "#{Rails.configuration.prices[:basic_listing]}"}}
                 
      .modal-footer
        = link_to "https://www.stripe.com", target: "_blank" do
          =image_tag("big.png")
