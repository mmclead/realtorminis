%nav.navbar.navbar-default.navbar-square{:role => "navigation"} 
  .navbar-header
    %button.navbar-toggle{:type => "button", :data => { :toggle => "collapse", :target => "#main-nav"} }
      %span.sr-only
        Toggle Navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{href: "/"}
      Realtor Minis
  .navbar-collapse.collapse#main-nav
    %ul.nav.navbar-nav
      %li{class: "#{'active' if current_page? user_path(current_user)}"}= link_to "Profile", user_path(current_user)
      %li{class: "#{'active' if is_under? 'listing' }"}= link_to "Listings", user_listings_path(current_user)
      %li{class: "#{'active' if is_under? 'account' }"}= link_to "Account", user_account_path(current_user)
    %ul.nav.navbar-nav.navbar-right
      - if user_signed_in?
        %li
          = link_to('Logout', destroy_user_session_path, :method=>'delete')
      - else
        %li
          = link_to('Login', new_user_session_path)
      - if user_signed_in?
        %li
          = link_to(current_user.email, edit_user_registration_path)
        - if current_user.admin?
          %li
            = link_to('Admin', users_path)
      - else
        %li
          = link_to('Sign up', new_user_registration_path)
            
