.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand.logo{:href => "#"}
        = image_tag('rm-logo.png')
    .collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li
          %a{:href => "#home"} Home
        %li
          %a{:href => "#contact"} Contact
        - if user_signed_in?
          %li
            = link_to listings_path do
              Back to Listings
              %i.ion-arrow-right-c
        - else
          %li
            %button.btn.btn-green.navbar-btn{type: "button", data: {toggle: "modal", target: "#user_signup_form"}}
              Sign up
          %li
            %button.btn.btn-link.navbar-btn{type: "button", data: {toggle: "modal", target: "#user_signin_form"}}
              Login